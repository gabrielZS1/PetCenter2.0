@{
    ViewData["Title"] = "Cadastrar Pet";
}

<div class="form-wrapper">
    <form method="POST" class="styled-form">

        <h1>Cadastrar Pet</h1>

        <input id="nome" class="input" placeholder="Nome do Pet" name="nome" type="text" required />
        <input id="telefone" class="input" placeholder="Telefone" name="telefone" type="text" required />
        <input id="email" class="input" placeholder="Email" name="email" type="email" required />
        <input id="senha1" class="input" placeholder="Senha" name="senha1" type="password" required />

        <button class="button" type="submit">Cadastrar</button>

    </form>
</div>

<link rel="stylesheet" href="~/css/CadastrarPet.css" />